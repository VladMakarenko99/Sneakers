@model List<Item>
@{
    ViewData["Title"] = "Filter";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/modal.css" />
</head>

<div class="main">
    <div class="sidenav modal" id="modal">
        <partial name="_filters" />
    </div>
    <div class="main-content">
        <div class="settings">
            <button data-modal-target="#modal" class="open-filters">Open Filters</button>
            <a href="/" class="open-filters">Reset Filters</a>
        </div>
        @if (Model.Count == 0)
        {
            <style>
                .main-content{
                    width: 100%;
                }
            </style>
            <div class="not-found" style="margin-top: 10%">
                <h1>Any sneakers found</h1> <br>
                <a href="/">Go back and change filters</a>
            </div>
        }
        else
        {
            <div class="product-grid">
                @foreach (var item in Model)
                {
                    <div class="product">
                        @{
                            string src = $"https://published.bsite.net/api/images/{item.Image}";
                            src = src.Replace(' ', '-');
                            item.Name = item.Name?.Replace(' ', '-');
                        }
                        <a href="/@item.Name"><img src="@src" alt="img" /></a>
                        <h3>@item.Name?.Replace('-', ' ')</h3>
                        <p>@item.Price $</p>
                    </div>
                }
            </div>
            @if (Model.Count != ViewBag.totalPageCount)
            {
                System.Console.WriteLine(Model.Count);
                System.Console.WriteLine(ViewBag.totalPageCount);
                <a id="load-more" href="">Load more</a>
            }
        }
    </div>
</div>
<footer class="footer" style="margin-top: 7%;">
    <div class="contacts">
        <span>Contacts</span>
        <div class="links">
            <a href="tel:+380679555670">+380679555670</a>
            <a href="mailto:mvladyslav02@gmail.com">mvladyslav02@gmail.com</a>
        </div>
    </div>
    <p>Â© Sneakershop 2023 All rights reserved</p>
    <div class="top-up"><img src="https://published.bsite.net/api/images/tick.svg" alt=""></div>
</footer>
<script src="~/js/scroll.js"></script>

</html>