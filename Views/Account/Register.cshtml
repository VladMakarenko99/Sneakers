@model practice.Models.User;
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="wwwroot/css/account.css">
</head>

<body>
    <div class="form">
        <form asp-action="Register" method="post">
            <h1 class="label">@ViewData["Title"]</h1>

            <div class="form-group">
                <input asp-for="FirstName" class="input" placeholder=" " /><br />
                <label class="control-label">First Name</label><br />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="LastName" class="input" placeholder=" " /><br />
                <label class="control-label">Last Name</label><br />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="input" placeholder=" " /><br />
                <label class="control-label">Email</label><br />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="input" id="password1" placeholder=" " /><br />
                <label class="control-label">Password</label><br />
                <i class="fa-solid fa-eye" id="show1"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmedPass" type="password" class="input" id="password2" placeholder=" " /><br />
                <label class="control-label">Confirm Password</label><br />
                <i class="fa-solid fa-eye" id="show2"></i>
                <span asp-validation-for="ConfirmedPass" class="text-danger"></span>
            </div>

            <input type="submit" class="button" value="Register" />
        </form>
        <span>Already have an account? </span><a asp-controller="Account" asp-action="Login" id="login">Log in</a>
    </div>
    <style>
        .fa-eye {
            font-size: 20px;
            color: #bababa;
            position: absolute;

            right: 15px;
            top: 25%;
            transform: translate(0, -50%);
            cursor: pointer;
        }

        .text-danger {
            font-family: 'Roboto', sans-serif;
            font-size: 15px;
            font-weight: 600;
        }

        body {
            justify-content: center;
            align-items: center;
            display: flex;
            height: 100vh;
            font-family: 'Roboto', sans-serif;
        }

        .form {
            width: 500px;
            padding: 40px;
            box-shadow: 0 4px 16px #c1d6cc;
            border-radius: 6px;
            border: 2px solid #bababa;
            letter-spacing: 1px;
        }

        .label {
            text-align: center;
            margin-bottom: 32px;
            font-weight: 500;
        }

        .form-group {
            position: relative;
            margin-bottom: 32px;
        }

        .control-label {
            position: absolute;
            top: 0;
            z-index: -1;
            color: #b2b2b2;
            transition: 0.3s;
        }

        .form .input {
            width: 100%;
            padding: 0 0 10px 0;
            border: none;
            border-bottom: 2px solid #aeb0b0;
            outline: none;
            background-color: transparent;
            transition: 0.6s;
        }

        .form .input:focus {
            border-bottom: 2px solid #376581;
        }

        .form .button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            color: white;
            background-color: #376581;
            outline: none;
            cursor: pointer;
            transition: 0.5s;
            font-size: 22px;
            text-align: center;
            width: 180px;
            margin-bottom: 20px;
            margin-top: -10px;
        }

        .form .button:focus,
        .form .button:hover {
            background-color: #0a3856;
        }

        .input:focus~.control-label,
        .input:not(:placeholder-shown)~.control-label {
            top: -18px;
            font-size: 12px;
        }

        #login {
            text-decoration: none;
            color: #376581;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }

        #login:hover {
            text-decoration: underline;
            text-decoration-color: #376581;
        }
    </style>
    <script src="js/site.js"></script>
    <script>const showPassword1 = document.querySelector("#show1");
        const showPassword2 = document.querySelector("#show2");

        const passField1 = document.querySelector("#password1");
        const passField2 = document.querySelector("#password2");

        showPassword1.addEventListener("click", function () {
            this.classList.toggle("fa-eye-slash");
            const type = passField1.getAttribute("type") === "password" ? "text" : "password";
            passField1.setAttribute("type", type);
            if (passField1.type === "text")
                showPassword1.style.color = "#376581";
            else
                showPassword1.style.color = "#bababa";
        })

        showPassword2.addEventListener("click", function () {
            this.classList.toggle("fa-eye-slash");
            const type = passField2.getAttribute("type") === "password" ? "text" : "password";
            passField2.setAttribute("type", type);
            if (passField2.type === "text")
                showPassword2.style.color = "#376581";
            else
                showPassword2.style.color = "#bababa";
        })</script>
</body>

</html>
