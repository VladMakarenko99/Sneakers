@model practice.Models.User;
@{
    ViewData["Title"] = "Log In";
    Layout = null;
    ViewBag.GoogleAuthUrl = "/account/google-login";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/account.css">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/IMG_8604.PNG" />
</head>

<body>
    <div class="form">
        <form asp-action="Register" method="post">
            <h1 class="label">@ViewData["Title"]</h1>

            <div class="form-group">
                <input asp-for="FirstName" class="input" placeholder=" " /><br />
                <label class="control-label">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="LastName" class="input" placeholder=" " /><br />
                <label class="control-label">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="input" placeholder=" " /><br />
                <label class="control-label">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="input" id="password1" placeholder=" " /><br />
                <label class="control-label">Password</label>
                <i class="fa-solid fa-eye" id="show1"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmedPass" type="password" class="input" id="password2" placeholder=" " /><br />
                <label class="control-label">Confirm Password</label>
                <i class="fa-solid fa-eye" id="show2"></i>
                <span asp-validation-for="ConfirmedPass" class="text-danger"></span>
            </div>

            <input type="submit" class="button" value="Register" />
        </form>
        <span>Already have an account? </span><a asp-controller="Account" asp-action="Login" id="login">Log in</a>
        @* <p><a href="@ViewBag.GoogleAuthUrl">Register with Google</a></p> *@
        <a class="google-btn" href="@ViewBag.GoogleAuthUrl">
            <div class="google-icon-wrapper">
                <img class="google-icon"
                    src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" />
            </div>
            <p class="btn-text">Continue with Google</p>
        </a>
    </div>
    <script>const showPassword1 = document.querySelector("#show1");
        const showPassword2 = document.querySelector("#show2");

        const passField1 = document.querySelector("#password1");
        const passField2 = document.querySelector("#password2");

        showPassword1.addEventListener("click", function () {
            this.classList.toggle("fa-eye-slash");
            const type = passField1.getAttribute("type") === "password" ? "text" : "password";
            passField1.setAttribute("type", type);
            if (passField1.type === "text")
                showPassword1.style.color = "#376581";
            else
                showPassword1.style.color = "#bababa";
        })

        showPassword2.addEventListener("click", function () {
            this.classList.toggle("fa-eye-slash");
            const type = passField2.getAttribute("type") === "password" ? "text" : "password";
            passField2.setAttribute("type", type);
            if (passField2.type === "text")
                showPassword2.style.color = "#376581";
            else
                showPassword2.style.color = "#bababa";
        })</script>
</body>

</html>
