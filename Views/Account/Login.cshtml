@model practice.Models.LoginModel;
@{
    ViewData["Title"] = "Log In";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="form">
        <form asp-action="Login" method="post">
            <h1 class="label">@ViewData["Title"]</h1>
            <div class="form-group">
                <input asp-for="Email" class="input" placeholder=" " /><br />
                <label class="control-label">Email </label><br />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="input" id="password" placeholder=" " /><br />
                <label class="control-label">Password</label><br />
                <i class="fa-solid fa-eye" id="show"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input type="submit" class="button" value="Log In" />
        </form>
        <span>Still don`t have an account? </span><a asp-controller="Account" asp-action="Register"
            id="login">Register</a>
    </div>
    <style>
        .fa-eye {
            z-index: 20;
            font-size: 20px;
            color: #bababa;
            position: absolute;
            right: 15px;
            top: 25%;
            transform: translate(0, -50%);
            cursor: pointer;
        }

        .text-danger {
            font-family: 'Roboto', sans-serif;
            font-size: 15px;
            font-weight: 600;
        }

        body {
            font-family: 'Roboto', sans-serif;
            justify-content: center;
            align-items: center;
            display: flex;
            height: 100vh;
        }

        .form {
            width: 500px;
            padding: 40px;
            box-shadow: 0 4px 16px #c1d6cc;
            border-radius: 6px;
            border: 2px solid #bababa;
            letter-spacing: 1px;
        }

        .label {
            text-align: center;
            margin-bottom: 50px;
            font-weight: bold;
        }

        .form-group {
            position: relative;
            margin-bottom: 45px;
        }

        .control-label {
            position: absolute;
            top: 0;
            z-index: -1;
            color: #b2b2b2;
            transition: 0.3s;
        }

        .form .input {
            width: 100%;
            padding: 0 0 10px 0;
            border: none;
            border-bottom: 2px solid #aeb0b0;
            outline: none;
            background-color: transparent;
            transition: 0.6s;
        }

        .form .input:focus {
            border-bottom: 2px solid #376581;
        }

        .form .button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            color: white;
            background-color: #376581;
            outline: none;
            cursor: pointer;
            transition: 0.5s;
            font-size: 22px;
            text-align: center;
            width: 180px;
            margin-bottom: 20px;
            margin-top: -10px;
        }

        .form .button:focus,
        .form .button:hover {
            background-color: #0a3856;
        }

        .input:focus~.control-label,
        .input:not(:placeholder-shown)~.control-label {
            top: -18px;
            font-size: 12px;
        }

        #login {
            text-decoration: none;
            color: #376581;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }

        #login:hover {
            text-decoration: underline;
            text-decoration-color: #376581;
        }
    </style>
    <script>
        const showPassword = document.querySelector("#show");
        const passField = document.querySelector("#password");

        showPassword.addEventListener("click", function () {
            this.classList.toggle("fa-eye-slash");
            const type = passField.getAttribute("type") === "password" ? "text" : "password";
            passField.setAttribute("type", type);
            if (passField.type === "text")
                showPassword.style.color = "#376581";
            else
                showPassword.style.color = "#bababa";
        })
    </script>
</body>

</html>