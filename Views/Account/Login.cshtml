@model Sneakers.Models.LoginModel;
@{
    ViewData["Title"] = "Log In";
    Layout = null;
    ViewBag.GoogleAuthUrl = "/account/google-login";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/account.css">
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="/api/images/IMG_8604.PNG" />
</head>

<body>
    <a href="/" class="back">/ Home Page</a>
    <div class="form login">
        <form asp-action="Login" method="post">
            <h1 class="label">@ViewData["Title"]</h1>
            <div class="form-group -login">
                <input asp-for="Email" class="input" placeholder=" " /><br>
                <label class="control-label">Email </label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group -login">
                <input asp-for="Password" type="password" class="input password" placeholder=" " /><br>
                <label class="control-label">Password</label>
                <i class="fa-solid fa-eye show"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input type="submit" class="button" value="Log In" />
        </form>
        <span>Still don`t have an account? </span><a asp-controller="Account" asp-action="Register"
            id="login">Register</a>
        <a class="google-btn" href="@ViewBag.GoogleAuthUrl">
            <div class="google-icon-wrapper">
                <img class="google-icon"
                    src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" />
            </div>
            <p class="btn-text">Continue with Google</p>
        </a>
    </div>
    <script src="~/js/showPwd.js"></script>

</body>

</html>